        <script src="{{ asset('/assets/lib/js/font-awesome.js') }}"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

        <style>
            input:focus + label {
                background: transparent;
            }
        </style>
    </head>
    <body class="bg-body-tertiary">
        <div class="container-fluid bg-white sticky-top px-5">
            <nav class="navbar navbar-expand-md justify-content-between">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('/assets/images/logo_full.png') }}" alt="Logo" width="143" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="nav mx-auto collapse navbar-collapse justify-content-center" id="navbarNav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" role="button" href="#">Sobre</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Serviços
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item text-dark" href="#">Abertura de empresa</a></li>
                            <li><a class="dropdown-item text-dark" href="#">Contabilidade</a></li>
                            <li><a class="dropdown-item text-dark" href="#">Contabilidade para Importação Exportação</a></li>
                            <li><a class="dropdown-item text-dark" href="#">Certificado Digital</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" role="button">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" role="button">Fale com a gente</a>
                    </li>
                </ul>
                <div class="d-flex flex-column align-items-baseline">
                    <p class="mb-2">(44) 3026-6080</p>
                    <div>
                        <a href="#" class="mx-2 text-dark text-decoration-none"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="mx-2 text-dark text-decoration-none"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#" class="mx-2 text-dark text-decoration-none"><i class="fa-solid fa-location-dot"></i></a>
                    </div>
                </div>
            </nav>
        </div>

        {% block body %}
        {% endblock %}

        <footer class="bg-primary">
            <div class="container d-flex py-3">
                <div class="col-md mx-auto my-4">
                    <h4 class="text-white fw-bold mb-5">Siscon Contabilidade</h4>

                    <div class="text-white fw-light my-4">
                        <p class="mb-1">Av. Dr. Alexandre Rasgulaeff, 752 | Jardim Alvorada</p>
                        <p class="mb-1">Maringá - PR, 87033-080</p>
                        <p class="mb-1">Contador responsável: Claudemir Aparecido Matiusso</p>
                        <p class="mb-1">CRC PR 042270/O-5</p>
                        <p class="mb-1">Escritório CRC PR oo5920/o5</p>
                    </div>

                    <div class="text-white fw-light my-4">
                        <p class="mb-1">siscon@siscon.cnt.br</p>
                        <p class="mb-1">(44) 3026-6080</p>
                    </div>
                </div>

                <div class="col-md mx-auto d-flex flex-column justify-content-center">
                    <label for="exampleInputEmail1" class="form-label fw-light text-white">Formulário de Inscrição</label>
                    <div class="d-flex">
                        <input type="email" class="border-bottom form-control text-white bg-primary mx-2" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <button class="btn btn-primary bg-white text-primary mx-2" type="submit">Enviar</button>
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
